@{
    ViewData["Title"] = "Products";
    @model Ecommerce_Webapp.Models.Product
   
}

<div class="container my-5">
    <div class="row">

        <!-- LEFT SIDE: Product Image -->
        <div class="col-md-6 text-center">

            <!-- Main Image -->
            <img id="mainProductImage"
                 src="@Model.ImagePath"
                 alt="@Model.Pname"
                 class="img-fluid rounded border mb-3"
                 style="height: 350px; object-fit: cover;" />

            <!-- Thumbnails -->
            <div class="d-flex gap-2 mt-2">
                @foreach (var img in Model.ProductImages)
                {
                    <img src="@img.ImagePath"
                         class="img-thumbnail"
                         style="width:70px; height:70px; object-fit:cover; cursor:pointer;"
                         onclick="changeImage('@img.ImagePath')" />
                }
            </div>

        </div>

        <!-- RIGHT SIDE: Product Details -->
        <div class="col-md-6">
            <h2 class="fw-bold mb-2">@Model.Pname</h2>

            <div class="mb-3">
                ⭐⭐⭐⭐⭐ <span class="text-muted">(32 reviews)</span>
            </div>

            <div class="p-3 mb-3 border rounded">
                <h4 class="text-danger mb-0">@Model.Price?.ToString("C")</h4>
            </div>

            <p class="fs-5 text-secondary">@Model.Description</p>

            <div class="mb-3">
                <strong>Material:</strong> Cotton <br />
                <strong>Style:</strong> Casual – Slim Fit
            </div>

            <a asp-controller="Cart"
               asp-action="AddToCart"
               asp-route-id="@Model.ProductId"
               class="btn btn-primary btn-lg px-4">
                Add to Cart
            </a>
        </div>
    </div>
</div>

<script>
    function changeImage(newImg) {
        document.getElementById("mainProductImage").src = newImg;
    }
</script>


