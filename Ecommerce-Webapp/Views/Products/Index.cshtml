@using System.Globalization
@{
      ViewData["Title"] = "Products";
  }
@model List<Product>

<h2 class="my-4 text-center">Products</h2>

<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var p in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@p.ImagePath" class="card-img-top" alt="@p.Pname" style="height:220px; object-fit:cover;">
                    <div class="card-body">
                        <h5 class="card-title">@p.Pname</h5>
                        <p class="card-text">@p.Description</p>
                    </div>
                    <div class="card-footer">
                        <strong>Price: </strong>
                        @(p.Price.HasValue
                            ? p.Price.Value.ToString("C", CultureInfo.GetCultureInfo("en-US"))
                            : "N/A")
                    </div>
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@p.ProductId " class="btn btn-primary btn-sm">View details</a>
                </div>
            </div>
        }
    </div>
</div>
