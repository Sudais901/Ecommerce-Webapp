  @{
      ViewData["Title"] = "Products";
  }
<div class="container mt-4">
    <h2 class="mb-4 text-center text-md-start fs-2 fs-md-1">Our Product</h2>

    <div class="row">
        <!-- Product 1 -->
        <div class="col-md-6 mb-4">
            <div class="card p-3 shadow-sm border-0">
                <div class="row g-0 align-items-center">
                    <div class="col-4">
                        <img src="~/images/product1.jpg" class="img-fluid rounded" alt="Product 1">
                    </div>
                    <div class="col-8">
                        <h5 class="fw-bold">Product 1</h5>
                        <p class="text-muted mb-1"><span class="text-danger fw-bold">$499.00</span></p>
                        <p class="text-warning mb-1">⭐ 4.5 | 120 orders | <span class="text-success">Free Shipping</span></p>
                        <p class="text-secondary small mb-2">
                            This is Product 1 description. It’s high quality and best in class.
                        </p>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="1" class="btn btn-primary btn-sm">View details</a>

                    </div>
                </div>
            </div>
        </div>

