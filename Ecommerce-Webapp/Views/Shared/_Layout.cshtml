<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Ecommerce</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>
<header class="bg-light py-2 shadow-sm">
    <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
            <!-- Left: Logo -->
            <div class="d-flex align-items-center mb-2 mb-md-0">
                <a class="navbar-brand" href="/">
                    <img src="~/images/logo.png" alt="Logo" height="40">
                </a>
            </div>

            <!-- Center: Search Bar -->
            <div class="flex-grow-1 mx-3 mb-2 mb-md-0">
                <form class="d-flex">
                    <input class="form-control me-2 flex-grow-1" type="search" placeholder="Search products..." aria-label="Search">
                    <button class="btn btn-outline-primary" type="submit">Search</button>
                </form>
            </div>

            <!-- Right: Icons -->
            <div class="d-flex align-items-center gap-3">
                <a href="#" class="text-dark">
                    <i class="bi bi-person-circle fs-5"></i>
                </a>
                <a href="#" class="text-dark">
                    <i class="bi bi-chat-dots fs-5"></i>
                </a>
                <a href="#" class="text-dark">
                    <i class="bi bi-bag-check fs-5"></i>
                </a>
                <a href="#" class="text-dark position-relative">
                    <i class="bi bi-cart fs-5"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        3
                        <span class="visually-hidden">items in cart</span>
                    </span>
                </a>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">My Store</a>

            <!-- Toggle button for mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Collapsible links -->
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Products/Index">Product</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

</header>
<body>
    <div class="container-fluid p-0">
        <div class="position-relative text-center text-white">
            <img src="~/images/banner.png" class="img-fluid w-100" alt="Banner Image">
            <div class="position-absolute top-50 start-50 translate-middle bg-dark bg-opacity-50 p-4 rounded">
            </div>
        </div>
    </div>
    <main>
        @RenderBody()
    </main>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>

<footer>
    <p>&copy; @DateTime.Now.Year — Ecommerce</p>
</footer>
</html>