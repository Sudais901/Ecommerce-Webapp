@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Register";
}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="max-width: 450px; width: 100%; border-radius: 15px;">

        <h2 class="text-center mb-4">Create Account</h2>

        <form method="post" asp-action="Register">
            <div class="mb-3">
                <label class="form-label fw-bold">Username</label>
                <input type="text" name="username" class="form-control form-control-lg" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Password</label>
                <input type="password" name="password" class="form-control form-control-lg" required />
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-lg mt-2" style="border-radius: 10px;">
                Sign Up
            </button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
        }

        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success mt-3">@ViewBag.Success</div>
        }

    </div>
</div>
