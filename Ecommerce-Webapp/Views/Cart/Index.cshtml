@model List<CartItem>

<h2>Your Cart</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Qty</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.ImagePath" width="60" class="img-fluid" /></td>
                    <td>@item.Pname</td>
                    <td>
                        <div class="d-flex align-items-center gap-2">
                            <a asp-controller="Cart" asp-action="DecreaseQuantity" asp-route-id="@item.ProductId" class="btn btn-sm btn-secondary">-</a>
                            <span>@item.Quantity</span>
                            <a asp-controller="Cart" asp-action="IncreaseQuantity" asp-route-id="@item.ProductId" class="btn btn-sm btn-secondary">+</a>
                        </div>
                    </td>
                    <td>@(item.Price * item.Quantity)</td>
                    <td>
                        <a asp-controller="Cart" asp-action="RemoveFromCart" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<h4 class="mt-3">
    Total: @Model.Sum(x => x.Price * x.Quantity).ToString("C")
</h4>
